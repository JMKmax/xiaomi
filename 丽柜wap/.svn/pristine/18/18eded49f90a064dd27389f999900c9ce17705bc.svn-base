<script>
	var params = quakooUtils.GetRequest();;
    var curHomeId = params.id;; // 访问用户的ID
    var nextCursor;
    var hasnext;

    var clientw = document.body.clientWidth; //1903（不包含滚动条）
    var fontSize = window.getComputedStyle($api.dom('html'), null)['fontSize'].split('px')[0];
    var userIcon_size = 1.227 * fontSize; //头像大小
    var image_size = (clientw - 0.667 * fontSize) / 3; //图片大小
    var video_size_w = clientw - 0.8 * fontSize; //视频cover width
    var video_size_h = clientw / 1.7045; //视频cover height
    var ajaxParams = {
            mid:curHomeId,
            type:1,
            size:10,
            cursor:0
        };
    mui.init({
		pullRefresh: {
			container: '#pullrefresh',
			down: {
				style:'circle',
				callback: pulldownRefresh
			},
			up: {
				style:'circle',
				auto:true,
				contentrefresh: '正在加载...',
				callback: pullupRefresh
			}
		}
	});
	
	
	function pullupRefresh(){	
		quakooData.ajaxGetData(config.getUrl_model_getModelCirclePager(),ajaxParams,function(ret,err){
			if (ret) {
				dynamicListTemplate(ret.data,true);
				ajaxParams.cursor = ret.nextCursor;
				nextCursor = ret.nextCursor;
				if(ret.hasnext){
					hasnext = false;
				}else{
					hasnext = true;
				}
				mui('#pullrefresh').pullRefresh().endPullupToRefresh(hasnext);
				if (quakooUtils.isBlack(ret.data)) {
					mui('#pullrefresh').pullRefresh().endPullupToRefresh(true);
				}
				if (ret.data.length == 0) {
					mui.toast("暂无相关数据！");
				}
			}
		})
	}

	function pulldownRefresh(){//下拉
		ajaxParams.cursor = 0;
		quakooData.ajaxGetData(config.getUrl_model_getModelCirclePager(),ajaxParams,function(ret,err){
			if (ret) {
				mui('#pullrefresh').pullRefresh().endPulldownToRefresh();
				mui('#pullrefresh').pullRefresh().refresh(ret.hasnext);
				dynamicListTemplate(ret.data);
				ajaxParams.cursor = ret.nextCursor;
				nextCursor = ret.nextCursor;
				if(ret.hasnext){
					hasnext = false;
				}else{
					hasnext = true;
				}
			}
		})
	}
    function dynamicListTemplate(results,append) {
    	var feilKey = quakooUtils.getImgKey();
        if (quakooUtils.isBlack(results)) return;
        for (var i = 0; i < results.length; i++) {
            if (quakooUtils.isNotBlack(results[i].userIcon)) {
                var _obj = quakooImg.processImg(results[i].userIcon, userIcon_size, userIcon_size);
                results[i].userIcon = _obj.url+feilKey;
                results[i].userIconStyle = _obj.style;
            } else {
                results[i].userIcon = '../../icon/defaultHead.png';
                results[i].userIconStyle = 'width:100%;height:100%';
            }
            if (results[i].objectType === 0) { //0图片 1视频
                var newImageArr = [];
                var imageStr = results[i].imageStr.split(',');
                imageStr.forEach(function (item) {
                    if (quakooUtils.isNotBlack(item)) {
                        var _obj = quakooImg.processImg(item, image_size, image_size);
                         _obj.url = _obj.url+feilKey;
                        newImageArr.push(_obj)
                    }
                });
                results[i].newImageArr = newImageArr.slice(0, 9);
            } else {
                if (quakooUtils.isNotBlack(results[i].imageStr)) {
                    var _obj = quakooImg.processImg(results[i].imageStr, video_size_w, video_size_h);
                    results[i].cover = _obj.url+feilKey;
                    results[i].coverStyle = _obj.style;
                }
            }
            results[i].ctime = quakooUtils.commentFormatTime(results[i].ctime)
        }
        var data = {
            list: results,
        };

        var html = template('scriptDiv1', data);
        if (append) {
            $api.append($api.dom('.dynamic-ul'), html)
        } else {
            $api.html($api.dom('.dynamic-ul'), html)
        }
        setTimeout(function () {
                echo.init({
                    offset: 0,
                    throttle: 0//设置图片延迟加载的时间
                });
        }, 100);

        
    }
    // 打开动态详情
    mui('.dynamic-ul').on('tap','.image_wrap',function(event){
    	var canView = +$api.attr($api.closest(this,'li[data-canView]'),'data-canView');
    	var id = this.getAttribute("data-id")
    	if(canView) {
			quakooApp.openNewWindow('model_communication', './model_communication.html', {id: id})
		}else {
			openReward(this)
		}
	})
    //取消打赏
    function cancelRew(){
    	
    	var oWrap = document.querySelector('.mark');
    	oWrap.style.display = "none"
    }
    function openReward(_this){
    	var oWrap = document.querySelector('.mark');
    	var oPrice = document.querySelector('.popup-main .price')
    	oWrap.style.display = "block"
	 	var id = _this.getAttribute("data-id")
	 	var reward = _this.getAttribute("data-price")
	 	oPrice.innerHTML = reward;
	 	buyCircleEvent(id,reward)
    }
     function buyCircleEvent(cid,reward) {
        quakooData.ajaxSubmitData(config.getUrl_circle_buyCircle(), {cid: cid}, function (ret, err) {
            if (ret && ret.success) {
                quakooMsg.toast('打赏成功');
                boughtDynamicRefreshDom(cid,reward)
                setTimeout(function () {
                    closeCurFrame()
                },300)
            }
        });
    }
    // 自定义 打赏
    mui('.dynamic-ul').on('tap','.handle-reward',function(event){
    	var canView = +$api.attr($api.closest(this,'li[data-canView]'),'data-canView');
		if(canView){
			var oWrap = document.querySelector('.rew_mask');
	    	oWrap.style.display = "block";
	    	renderRew();
		 	var id = this.getAttribute("data-id")
		 	RewardPro(id);
		}else {
			openReward(this)
		}
	})
    function closeCurFrame(){
    	var oWrap = document.querySelector('.rew_mask');
    	oWrap.style.display = "none";
    }
    function renderRew(){
    	 quakooData.ajaxSubmitDataNotProcess(config.getUrl_postType_getPostTypeListByType(), {type: 4}, function (ret, err) {
            if (ret && ret.success) {
                var data = {
                    list: ret.data
                };
                var html = template('reward_1', data);
                $api.html($api.dom('.popups-area'), html);
                quakooData.ajaxSubmitDataNotProcess(config.getUrl_wallet_getMyWallet(), {}, function (ret, err) {
                    if (ret && ret.success) {
                        $api.text($api.dom('.user-money-total span'), ret.data.money);
                        money = ret.data.money
                    }
                });
                setTimeout(function(){
                	
                })
            }
        })
    }
    function RewardPro(cid) {
        price = $api.val($api.dom('.atWill input'));
        if (quakooUtils.isBlack(price)) {
            quakooMsg.toast('请选择金额')
            return;
        }
        var ajaxparams = {
            type: 1,
            objectId: cid,
            money: price
        }
        quakooData.ajaxSubmitData(config.getUrl_model_rewardModelOrCircle(), ajaxparams, function (ret, err) {
            if (ret && ret.success) {
                quakooMsg.toast('打赏成功');
                boughtDynamicRefreshDom(cid,price)
                setTimeout(function () {
                    closeCurFrame()
                }, 300)
            }
        })
    }
	function checkSel(index, nub) {
		quakooUtils.stopEventBubble()
        var labs = $api.domAll('.rewards-ul li');
        labs.forEach(function (item, i) {
            if (index == i) {
                if (!item.classList.contains('active')) {
                    $api.addCls(item, 'active')
                    $api.val($api.dom('.atWill input'), nub)
                }
            } else {
                if (item.classList.contains('active')) {
                    $api.removeCls(item, 'active')
                }
            }
        })
    }
	 function clearStyle() {
        var labs = $api.dom('.rewards-ul li.active');
        if (quakooUtils.isNotBlack(labs)) {
            $api.removeCls(labs, 'active')
        }
    }
	 //打开充值窗口
    function openRechargeWin() {
        quakooApp.openNewWindow('recharge', '../mine/recharge.html', {})
    }
	// 动态购买成功刷新dom
	function boughtDynamicRefreshDom(cid,reward) {
		var parentLi = $api.dom('#dynamic'+cid);
		if(quakooUtils.isNotBlack(parentLi)){
			// 更新 动态是否 可查看详情
			$api.attr(parentLi,'data-canView',1);
			// 去掉图片模糊
			$api.domAll(parentLi,'.overImg').forEach(function (item,index) {
				$api.removeAttr(item,'class')
			});
			// 更新打赏金额
			updateMoney(cid,reward)
		}
	}
	 //更新打赏金额 已打赏人数
    function updateMoney(cid,reward){
        var parentLi = $api.dom('#dynamic'+cid);
        if(quakooUtils.isNotBlack(parentLi)){
            var totalReward = +$api.text($api.dom(parentLi,'#totalReward'+cid));
            var _reward = +reward;
            $api.html($api.dom(parentLi,'#totalReward'+cid),totalReward+_reward);

            // 更新打赏人数
            var curNumberDom = $api.dom(parentLi,'.notification span');
            var curNumber = +$api.text(curNumberDom);
            $api.text(curNumberDom,++curNumber);
        }

    }
