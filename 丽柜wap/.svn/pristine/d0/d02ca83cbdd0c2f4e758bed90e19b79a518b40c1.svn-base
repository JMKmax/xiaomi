    	}
    	.item .time{
    		font-size: 0.32rem;
    		color: #fff;
    		font-family:PingFang-SC-Regular;
    		height: 0.533333rem;
    		line-height: 0.533333rem;
    		text-align: center;
    		background: #000;
    		opacity: 0.5;
    		border-radius: 0.053333rem;
    		padding: 0 0.106666rem;
    		position: absolute;
    		bottom: 0.4rem;
    		right: 0.4rem;
    	}
    	.price{
    		font-size: 0.426666rem;
    		color: #fff;
    		font-family:PingFang-SC-Medium;
    		position: absolute;
    		bottom: 0.4rem;
    		left: 0.4rem;
    	}
