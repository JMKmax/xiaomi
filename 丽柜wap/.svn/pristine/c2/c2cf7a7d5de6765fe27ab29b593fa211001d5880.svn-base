    <style type="text/css">
        body, html {
            background-color: #f5f5f5;
        }

        body {
            padding-top: 0.266666rem;
        }

        .fit {
            box-sizing: border-box;
            padding: 0 0.4rem 0 0.4rem;
        }

        .notice_item {
            background-color: white;
            position: relative;
            padding-bottom: 0.4rem;
            border-bottom: 0.026666rem solid #f5f5f5;
        }

        .notice_item > div {
            display: inline-block;
        }

        .notice_item_icon {
            position: absolute;
            top: 50%;
            margin-top: -0.626666rem;
            width: 0.853333rem;
            height: 0.853333rem;
        }

        .notice_item_icon > img {
            width: 0.853333rem;
            height: 0.853333rem;
            background-color: pink;
            border-radius: 50%;
        }

        .notice_item_content {
            width: calc(98% - 0.853333rem);
            margin-left: 1.12rem;
            margin-top: 0.32rem;
        }

        .notice_item_content > p {
            font-family: PingFang-SC-Regular;
            font-size: 0.373333rem;
            color: #333333;
            text-align: justify
        }

        .notice_item_content > div {
            font-family: PingFang-SC-Regular;
            font-size: 0.32rem;
            color: #999999;
            margin-top: 0.266666rem;
            margin-left: 0.133333rem;
        }
        .item_icon {
            width: 0.853rem;
            height: 0.853rem;
            border-radius: 50%;
        }
        .verify {
            background:#7ed321 url("../../icon/m4.png") no-repeat center center;
            -webkit-background-size:0.48rem 0.56rem;
            background-size::0.48rem 0.56rem;
        }
    </style>
</head>

