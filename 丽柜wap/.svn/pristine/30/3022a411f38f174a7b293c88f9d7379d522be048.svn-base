        html, body {
            width: 100%;
            min-height: 100%;
            height: auto;
            background: #F5F5F5;
        }

        .record-ul {
            padding-top: 0.267rem;
        }

        .record-ul li {
            background: #fff;
            display: flex;
            justify-content: space-between;
            padding: 0.427rem 0.4rem;
            position: relative;
        }

        .record-ul li:after {
            content: '';
            height: 1px;
            background: #f1f1f1;
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            transform: scaleY(.5);
        }

        .record-type {
            line-height: 1.5em;
            font-size: 14px;
        }

        .record-time {
            margin-top: 0.107rem;
            font-size: 12px;
            color: #999999;
        }

        .record-right {
            text-align: right;
        }

        .record-money {
            text-align: right;
            font-size: 20px;
            line-height: 0.747rem;
            color: #ff5c98;
        }

        .record-status {
            margin-top: 0.16rem;
            font-size: 12px;
            color: #333333;
        }

        .record-status.fail {
            color: #999999;
        }
    </style>
</head>
