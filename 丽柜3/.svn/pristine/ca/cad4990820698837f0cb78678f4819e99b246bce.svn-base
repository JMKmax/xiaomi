			}
			.cover .clear{
				width: 0.533333rem;
				height: 0.533333rem;
				background-color: #333;
				border-radius: 50%;
				position: absolute;
				top: -0.266666rem;
				right: -0.266666rem;
				
			}
			.cover .clear img{
				width: 0.213333rem;
				height: 0.213333rem;
				margin-top: 50%;
				margin-left: 50%;
				transform: translate(-50%,-50%);
			}

			.choose_price{
				padding-top: 0.32rem;
				border-top: 0.266666rem solid #f5f5f5;
				clear: left;
			}
			.choose_price_title{

				font-size: 0.426666rem;
				color:#333333;
			}
			.choose_price_option{
				width: fit-content;
				height: 0.8rem;
				float: left;
				margin-right: 0.533333rem;
				box-sizing: border-box;
				padding-top: 0.266666rem;
			}
			.unsel {
            	display: inline-block;
            	width:0.427rem;
           	 	height:0.427rem;
            	background: url("../../icon/pay-unsel.png") no-repeat center center;
            	-webkit-background-size: cover;
            	background-size: cover;
        	}
        	.choose_price_option.active .unsel{
            	background: url("../../icon/pay-sel.png") no-repeat center center;
            	-webkit-background-size: cover;
            	background-size: cover;
        	}
			.choose_price_option>div{
				display: inline-block;
			}
			.choose_price_options{
				float: left;
				margin-top: 0.266666rem;
			}
			.choose_price_option>div:nth-child(1){
				width: 0.426666rem;
				height: 0.426666rem;
				background-color: #e1e1e1;
				border-radius: 50%;
			}
			.choose_price_option>div:nth-child(1)>img{
				width: 0.293333rem;
				height: 0.213333rem;
				margin-left: 50%;
				margin-top: 50%;
				transform: translate(-50%,-50%);
			}
			.choose_price_option>div:nth-child(2){
				position: relative;
				top: -0.106666rem;
				font-size: 0.373333rem;
				color:#333333;
			}
			.choose_price_option_active{
				background-color: #ff5c98 !important;
			}
			.white {
				/*填补底部绝对定位空当*/
				width: 100%;
				height: 2rem;
				background-color: transparent;
				clear: both;
				float: left;
			}
			
			.bottombar {
				position: fixed;
				bottom: 0;
				left: 0;
				z-index: 1000;
