    <style>
        html, body {
            width: 100%;
            min-height: 100%;
            height: auto;
            background: #F5F5F5;
        }

        .record-ul {
            padding-top: 0.267rem;
        }

        .record-ul li {
            background: #fff;
            display: flex;
            justify-content: space-between;
            padding: 0.427rem 0.4rem;
            position: relative;
        }

        .record-ul li:after {
            content: '';
            height: 1px;
            background: #F1F1F1;
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            transform: scaleY(.5);
        }

        .record-left {
            display: flex;
        }

        .user-icon {
            flex-shrink: 0;
            width: 0.96rem;
            height: 0.96rem;
            border-radius: 50%;
            overflow: hidden;
            margin-right: 0.267rem;
        }

        .user-icon img {
            width: 100%;
            height: 100%;
        }

        .record-type {
            line-height: 1.5em;
            font-size: 14px;
            max-width: 4.5rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .record-time {
            margin-top: 0.107rem;
            font-size: 12px;
            color: #999999;
        }

        .record-right {
            line-height: 2;
        }

        .record-money {
            text-align: right;
            font-size: 20px;
            height: 100%;
            color: #333333;
        }
    </style>
</head>
