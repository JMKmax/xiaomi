<script type="text/html" id="scriptDiv1">
    <%for(var i = 0 ; i < list.length ;i++){%>
        <li>
            <div class="record-left">
                <div class="user-icon">
                    <img src="../../icon/defaultHead.png" alt="">
                </div>
                <div>
                    <div class="record-type"><%=list[i].title%></div>
                    <div class="record-time"><%=list[i].dayTime%></div>
                </div>
            </div>

            <div class="record-right">
                <div class="record-money">-<%=list[i].money%></div>
            </div>
        </li>
    <%}%>
</script>
<script>
    apiready = function () {
        pageEvent()
    };

    function pageEvent() {
        /**
         * 记录类型 0充值 1消费 2获得 3提现
         * 1购买微信 2购买作品 3订阅 4打赏
         */
        new QuakooPage(consumeRecordCb, config.getUrl_wallet_getWalletRecordPager(), {type: 1, objectType: 0})
    }

    function consumeRecordCb(results, append) {
        for(var i = 0; i<results.length;i++){
            results[i].dayTime = quakooUtils.formatTimeToMonthSeconds(results[i].dayTime)
        }
        var data = {
            list:results
        } ;
        var html= template('scriptDiv1',data);
        if(append){
            $api.append($api.dom('.record-ul'),html)
        }else {
            $api.html($api.dom('.record-ul'),html)
        }
    }
</script>

